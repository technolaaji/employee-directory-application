        "cors": "~2.8.5",
        "dotenv": "~8.2.0",
        "emotion": "~10.0.23",
        "express": "~4.17.1",
        "jsonwebtoken": "~8.5.1",
        "lodash": "~4.17.15",
        "loglevel": "~1.6.6",
        "mongoose": "~5.7.10",
        "morgan": "~1.9.1",
        "next": "~9.1.4",
        "parcel-bundler": "~1.12.4",
        "react": "~16.12.0",
        "react-alert": "~6.0.0",
        "react-alert-template-basic": "~1.0.0",
        "react-collapse": "~5.0.0",
        "react-dom": "~16.12.0",
        "react-media": "~1.10.0"
    },
    "devDependencies": {
        "@types/bcrypt": "~3.0.0",
        "@types/body-parser": "~1.17.1",
        "@types/cors": "~2.8.6",
