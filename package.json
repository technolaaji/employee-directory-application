{
    "name": "employee-directory-application",
    "version": "1.1.1",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "dev-back-start": "cd backend && nodemon index.ts",
        "back-build": "cd backend && tsc -p tsconfig.json",
        "dev-front-start": "next",
        "front-build": "next build",
        "front-export": "next export",
        "front-deploy": "npm run front-build",
        "back-build-remove": "rimraf dist-back",
        "front-build-remove": "rimraf .next && rimraf out",
        "build": "npm install && npm run back-build-remove && npm run front-build-remove && npm run back-build && npm run front-deploy",
        "front-start": "next build && next start",
        "start": "cd dist-back && NODE_ENV=production node index.js",
        "dev": "concurrently \"npm run dev-back-start\" \"npm run dev-front-start\"",
        "tslint:back": "tslint -c tslint.json 'backend/**/*.ts'",
        "tslint:front": "tslint -c tslint.json 'pages/**/*.{.ts,.tsx}'",
        "tslint": "npm run tslint:back && npm run tslint:front",
        "tslint-fix:back": "tslint --fix -c tslint.json 'backend/**/*{.ts,.tsx}' -t verbose",
        "tslint-fix:front": "tslint --fix -c tslint.json 'pages/**/*{.ts,.tsx}' -t verbose",
        "tslint-fix:all": "npm run tslint-fix:back && npm run tslint-fix:front",
        "pretty-quick": "pretty-quick",
        "tslint-check": "tslint-config-prettier-check ./tslint.json",
        "prettier-check:back": "prettier --parser typescript --check 'backend/**/*.ts'",
        "prettier-check:front": "prettier --parser typescript --check 'pages/**/*{.ts,.tsx}'",
        "prettier-check:all": "npm run prettier-check:back && npm run prettier-check:front",
        "prettier-fix:back": "prettier --parser typescript --write 'backend/**/*.ts'",
        "prettier-fix:front": "prettier --parser typescript --write 'pages/**/*{.ts,.tsx}'",
        "prettier-fix:all": "npm run prettier-fix:back && npm run prettier-fix:front"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/technolaaji/employee-directory-application.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/technolaaji/employee-directory-application/issues"
    },
    "homepage": "https://github.com/technolaaji/employee-directory-application#readme",
    "dependencies": {
        "@hapi/joi": "~16.1.7",
        "axios": "~0.19.0",
        "bcrypt": "~3.0.6",
        "body-parser": "~1.19.0",
