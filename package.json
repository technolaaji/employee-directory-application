        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-typescript": "^1.0.1",
        "rollup-plugin-typescript2": "^0.25.2",
        "rollup-plugin-uglify": "^6.0.3",
        "ts-node": "^8.5.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.2"
    },
    "proxy": "http://localhost:5000"
}
